<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.JoystickFragment"
    android:background="@color/bg_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.hkardesler.armini.helpers.JoyStickSurfaceView
            android:id="@+id/joystickView1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp" />

        <com.hkardesler.armini.helpers.JoyStickSurfaceView
            android:id="@+id/joystickView2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:layout_toEndOf="@id/joystickView1"/>

        <com.hkardesler.armini.helpers.JoyStickSurfaceView
            android:id="@+id/joystickView3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="80dp"
            android:layout_toEndOf="@id/joystickView2"/>


        <com.hkardesler.armini.helpers.VerticalSeekBar
            android:id="@+id/seekBar1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:thumbTint="@color/dark_gray_2"
            android:thumb="@drawable/seekbar_thumb"
            />

    </RelativeLayout>

</FrameLayout>